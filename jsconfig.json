{
    "compilerOptions": {
        "checkJs": true,
        "strict": true,
        "target": "es2020",
        "module": "system",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "typeRoots": [
            "node_modules/@types",
            "node_modules/web-ext-types"
        ]
    },
    "typeAcquisition": {
        "include": [
            "*.js",
            "*.ts",
            "background/**/*.js",
            "background/**/*.ts",
            "node_modules/web-ext-types/global/index.d.ts",
            "firefox-webext-browser"
        ]
    }
}